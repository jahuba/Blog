<header>
  <nav class="be-red white large-padding">
    <ul class="no-list row center-xs">
      <li class="col-md">
        <h1 class="no-margin" id="logo">
          <%= link_to "Blog Facilito", root_path %>
        </h1>
      </li>
      <li class="col-md">
        <%= link_to "Articulos", articles_path %>
      </li>

      <!-- Categorias -->
      <% @categories.each do |category| %>
        <li class="col-md">
          <%= link_to category.name, category, style: "color:#{category.color}" %>
        </li>
      <% end %>

      <% if user_signed_in? %>
        <li class="col-md">
          <%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, style: "color:blue" %>
        </li>
      <% else %>
        <li class="col-md">
          <%= link_to "Iniciar Sesion", new_user_session_path, style: "color:blue" %>
        </li>
        <li class="col-md">
          <%= link_to "Crear cuenta", new_user_registration_path, style: "color:blue" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>

